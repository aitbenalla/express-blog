<%- include("components/head"); -%>
<%- include("components/navbar"); -%>
<div class="container py-4">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/posts/new" class="btn btn-success">New Article</a>
    <% posts.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= article.title %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= article.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-text mb-2"><%= article.description %></div>
                <a href="posts/<%= article.slug %>" class="btn btn-primary">Read More</a>
                <a href="posts/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                <form action="/posts/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>
<%- include("components/footer"); -%>